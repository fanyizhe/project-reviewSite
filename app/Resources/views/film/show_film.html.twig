{% extends "base.html.twig" %}

{% block title %}AppBundle:film:filmlist{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1>主页：显示电影列表</h1>
        <div class="col-lg-12" style="margin: 10px">
            <h2>评分最高的电影：</h2>
            {% for bestFilm in bestFilms %}
                <div class="col-lg-4" style="padding: 10px">
                    <a href="{{ path('one_film',{'fid':bestFilm.candidature.id}) }}">
                        <div style="display: inline-block">
                            <img class="col-lg-12" style="height: 100%" src="{{ asset('uploads/film_images/')}}{{ bestFilm.candidature.title }}/{{ bestFilm.candidature.title }}_Poster.jpg">
                            <h1 class="col-lg-12">{{ bestFilm.candidature.title }}</h1>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <h1>电影列表</h1>
        {% for candidature in candidatures %}
        <div class="col-lg-12" style="margin: 10px">
            <a href="{{ path('one_film',{'fid':candidature.id}) }}">
                <div style="display: inline-flex">
                    <img class="col-lg-3" style="height: 100%" src="{{ asset('uploads/film_images/')}}{{ candidature.title }}/{{ candidature.title }}_Poster.jpg">
                    <div class="col-lg-9" style="padding: 20px">
                        <h1>{{ candidature.title }}</h1>
                        <p>{{ candidature.introduction }}</p>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
{% endblock %}
