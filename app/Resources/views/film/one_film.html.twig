{% extends "base.html.twig" %}

{% block title %}AppBundle:film:oneFilm{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1>显示单个电影的具体信息</h1>
        <div class="col-lg-12">
            <img class="col-lg-4" style="height: 100%" src="{{ asset('uploads/film_images/')}}{{ film.title }}/{{ film.title }}_Poster.jpg">
            <div class="col-lg-8" style="padding: 30px">
                <h1>{{ film.title }}</h1>
                <div>
                    <div style="display: inline-flex"><h3>平均分 ：</h3> <h1 style="padding-left: 10px;font-weight: bolder">{{ statistic.noteAvg }}</h1></div>
                    <table class="table table-sm table-inverse">
                        <tbody>
                            <tr>
                                <td>
                                    {% for i in range(1,5) %}
                                        <img src="{{ asset('star.jpg') }}">
                                    {% endfor %}
                                </td>
                                <td>{{ statistic.noteNb5 }} 人</td>
                            </tr>
                            <tr>
                                <td>
                                    {% for i in range(1,4) %}
                                        <img src="{{ asset('star.jpg') }}">
                                    {% endfor %}
                                </td>
                                <td>{{ statistic.noteNb4 }} 人</td>
                            </tr>
                            <tr>
                                <td>
                                    {% for i in range(1,3) %}
                                        <img src="{{ asset('star.jpg') }}">
                                    {% endfor %}
                                </td>
                                <td>{{ statistic.noteNb3 }} 人</td>
                            </tr>
                            <tr>
                                <td>
                                    {% for i in range(1,2) %}
                                        <img src="{{ asset('star.jpg') }}">
                                    {% endfor %}
                                </td>
                                <td>{{ statistic.noteNb2 }} 人</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="{{ asset('star.jpg') }}">
                                </td>
                                <td>{{ statistic.noteNb1 }} 人</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

        <div style="margin:30px" class="col-sm-12"><h4>{{ film.introduction }}</h4></div>
        <div class="col-lg-12" style="margin-bottom: 100px;">
            {% if images is not null %}
                {% for image in images %}
                    <img class="col-lg-3" style="height: 100%" src="{{ asset(image.url) }}">
                {% endfor %}
            {% endif %}
        </div>

    </div>

{% endblock %}